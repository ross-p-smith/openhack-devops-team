pipeline { 
    agent any 
    options {
        skipStagesAfterUnstable()
    }
    stages {
        stage('Build') { 
            steps {
                checkout scm

                script {
                    // Get the Terraform tool.
                    def dockerHome = tool name: 'LatestDocker'
                    env.PATH = "${dockerHome}:${env.PATH}"

                    docker.withRegistry('https://openhackib74acr.azurecr.io', 'OpenHack-ACR') {
                        def poi = docker.build("devopsoh/api-poi:${BUILD_NUMBER}", "./apis/poi/web")
                        poi.push()

                        def trips = docker.build("devopsoh/api-trip:${BUILD_NUMBER}", "./apis/trips")
                        trips.push()
                        
                        def userjava = docker.build("devopsoh/api-user-java:${BUILD_NUMBER}", "./apis/user-java")
                        userjava.push()

                        def userprofile = docker.build("devopsoh/api-user:${BUILD_NUMBER}", "./apis/userprofile")
                        userprofile.push()
                    }
                    
                    // sh "git rev-parse HEAD > .git/commit-id"
                    // def commit_id = readFile('.git/commit-id').trim()
                    // println commit_id
                }
            }
        }
    }
}